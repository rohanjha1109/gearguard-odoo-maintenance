<odoo>

    <!-- Maintenance Request Form -->
    <record id="view_gear_maintenance_request_form" model="ir.ui.view">
        <field name="name">gear.maintenance.request.form</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="request_type" />
                        <field name="equipment_id" />
                        <field name="team_id" readonly="1" />
                        <field name="technician_id" />
                    </group>
                    <group>
                        <field name="scheduled_date" />
                        <field name="duration" />
                        <field name="state" />
                        <field name="is_overdue" readonly="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Maintenance Request Tree -->
    <record id="view_gear_maintenance_request_tree" model="ir.ui.view">
        <field name="name">gear.maintenance.request.tree</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="equipment_id" />
                <field name="team_id" />
                <field name="state" />
                <field name="scheduled_date" />
            </tree>
        </field>
    </record>

    <!-- Maintenance Request Action -->
    <record id="action_gear_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gear.maintenance.request</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
<odoo>

    <!-- Maintenance Request Form -->
    <record id="view_gear_maintenance_request_form" model="ir.ui.view">
        <field name="name">gear.maintenance.request.form</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="request_type" />
                        <field name="equipment_id" />
                        <field name="team_id" readonly="1" />
                        <field name="technician_id" />
                    </group>
                    <group>
                        <field name="scheduled_date" />
                        <field name="duration" />
                        <field name="state" />
                        <field name="is_overdue" readonly="1" />
                    </group>
                    <button
                        name="action_mark_scrap"
                        type="object"
                        string="Mark as Scrap"
                        class="btn-danger"
                        attrs="{'invisible': [('state','=','scrap')]}"
                    />
                </sheet>
            </form>
        </field>
    </record>

    <!-- Maintenance Request Tree -->
    <record id="view_gear_maintenance_request_tree" model="ir.ui.view">
        <field name="name">gear.maintenance.request.tree</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="equipment_id" />
                <field name="team_id" />
                <field name="state" />
                <field name="scheduled_date" />
            </tree>
        </field>
    </record>

    <!-- Maintenance Request Action -->
    <record id="action_gear_maintenance_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gear.maintenance.request</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
    </record>

    <!-- Maintenance Request Kanban View -->
    <record id="view_gear_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">gear.maintenance.request.kanban</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name" />
                <field name="equipment_id" />
                <field name="team_id" />
                <field name="is_overdue" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name" />
                            </strong>
                            <div>
                                <field name="equipment_id" />
                            </div>
                            <div>
                                <field name="team_id" />
                            </div>
                            <div t-if="record.is_overdue.raw_value" style="color:red;">
                                Overdue
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Preventive Maintenance Calendar View -->
    <record id="view_gear_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">gear.maintenance.request.calendar</field>
        <field name="model">gear.maintenance.request</field>
        <field name="arch" type="xml">
            <calendar
                string="Preventive Maintenance"
                date_start="scheduled_date"
                domain="[('request_type','=','preventive')]">
                <field name="name"/>
            </calendar>
        </field>
    </record>

</odoo>
<odoo>

    <!-- Maintenance Team Form View -->
    <record id="view_gear_maintenance_team_form" model="ir.ui.view">
        <field name="name">gear.maintenance.team.form</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="member_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Maintenance Team Tree View -->
    <record id="view_gear_maintenance_team_tree" model="ir.ui.view">
        <field name="name">gear.maintenance.team.tree</field>
        <field name="model">gear.maintenance.team</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Maintenance Team Action -->
    <record id="action_gear_maintenance_team" model="ir.actions.act_window">
        <field name="name">Maintenance Teams</field>
        <field name="res_model">gear.maintenance.team</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
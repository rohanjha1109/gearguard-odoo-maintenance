<odoo>

    <!-- Equipment Form View -->
    <record id="view_gear_equipment_form" model="ir.ui.view">
        <field name="name">gear.equipment.form</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipment">
                <div class="oe_button_box" name="button_box">
                    <button
                        name="action_view_maintenance_requests"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-wrench">
                        <field name="request_count" widget="statinfo"/>
                    </button>
                </div>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="maintenance_team_id"/>
                        <field name="location"/>
                    </group>
                    <group>
                        <field name="purchase_date"/>
                        <field name="warranty_expiry"/>
                        <field name="department"/>
                        <field name="employee_name"/>
                        <field name="is_scrapped" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Equipment Tree View -->
    <record id="view_gear_equipment_tree" model="ir.ui.view">
        <field name="name">gear.equipment.tree</field>
        <field name="model">gear.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="maintenance_team_id"/>
                <field name="location"/>
                <field name="is_scrapped"/>
            </tree>
        </field>
    </record>

    <!-- Equipment Action -->
    <record id="action_gear_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">gear.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>